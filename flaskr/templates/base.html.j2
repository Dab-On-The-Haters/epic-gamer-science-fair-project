{% macro navbar(user, c='/', spacing=2) %}
    <div class="w3-top">
        <div class="w3-bar w3-2019-galaxy-blue w3-card">
            <a href="/" class="w3-bar-item w3-button w3-padding-large {% if c=='/' %} w3-indigo {% else %} w3-hover-indigo {% endif %}">Joe</a>
            <a href="/about" class="w3-bar-item w3-button w3-padding-large w3-hide-small {% if c=='about' %} w3-indigo {% else %} w3-hover-indigo {% endif %}">Learn more about Joe</a>
            <a href="/teach" class="w3-bar-item w3-button w3-padding-large w3-hide-small {% if c=='teach' %} w3-indigo {% else %} w3-hover-indigo {% endif %}">Teach with Joe</a>
            <a href="/explore-models" class="w3-bar-item w3-button w3-padding-large w3-hide-small {% if c=='explore' %} w3-indigo {% else %} w3-hover-indigo {% endif %}">Talk to our neural networks with Joe</a>
            {% if (not user) or user.is_anonymous %}
                <a href="/login" class="w3-bar-item w3-button w3-right w3-padding-large w3-hide-small {% if c=='login' %} w3-indigo {% else %} w3-hover-indigo {% endif %}">Log In</a>
                <a href="/register" class="w3-bar-item w3-button w3-right w3-padding-large w3-hide-small {% if c=='register' %} w3-indigo {% else %} w3-hover-indigo {% endif %}">Sign Up</a>
            {% else %}
                <span class="w3-bar-item w3-right w3-padding-large"><b>{{ user.name|escape }}</b></span>
                <a href="/logout" class="w3-bar-item w3-button w3-right w3-padding-large w3-hide-small w3-hover-indigo">My Account</a>
            {% endif %}
        </div>
    </div>
    {% if spacing %}
        <div>{% for br in range(spacing) %}<br>{% endfor %}</div>
    {% endif %}
{% endmacro %}


{% macro head(title, popups=False, important=False) %}
    <meta charset="UTF-8">
    <title>{% if 'Joe' in title %}{{ title }}{% else %}{{ title~' | Joe'}}{% endif %}</title>
    <link rel="stylesheet" href="/static/w3.css">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    {% if popups %}<link rel="stylesheet" href="/static/popups.css">{% endif %}
    <link rel="stylesheet" href="/static/w3-colors-2019.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins|Poppins:i|Poppins:b&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color:#191970;
            font-family: 'Poppins', sans-serif;
        }
        iframe {
            border-style: hidden; 
        }
        .w3-poppins {
            font-family: 'Poppins', sans-serif;
        }
    </style>
    {% if important %}
    <base target="_blank">
    {% endif %}
{% endmacro %}